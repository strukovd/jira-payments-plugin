<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/money.png</param>
        <param name="plugin-logo">images/money.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="payments"/>
    
    <!-- add our web resources -->
    <web-resource key="payments-resources" name="payments Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="payments.css" location="/css/payments.css"/>
        <resource type="download" name="payments.js" location="/js/payments.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>payments</context>
    </web-resource>


	<servlet name="resolution" i18n-name-key="resolution.name" key="resolution" class="com.askartec.plugin.servlet.resolution"> 
		<description key="resolution.description">The resolution Plugin</description>  
		<url-pattern>/resolution</url-pattern>
		<!-- http://localhost:2990/jira/plugins/servlet/resolution -->
	</servlet>





	<issue-tabpanel key="issue-tabpanel-invoices" name="Panel of invoices" class="com.askartec.plugin.invoices.IssueTab">
		<description>Список счетов текущей задачи</description>
		<label>Счета на оплату</label>
		<supports-ajax-load>true</supports-ajax-load>
	</issue-tabpanel>

	<issue-tabpanel key="issue-tabpanel-payments" name="Panel of payments" class="com.askartec.plugin.payments.IssueTab">
		<description>Список платежей</description>
		<label>Платежи</label>
		<supports-ajax-load>true</supports-ajax-load>
	</issue-tabpanel>

	<rest key="invoice-rest-api" path="/api" version="1">
		<package>com.askartec.plugin.rest.v1</package>
	</rest>
</atlassian-plugin>